<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="15dp"
    android:paddingRight="20dp"
    android:paddingBottom="15dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/coffee_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dee"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="Order Coffee"
        android:textColor="#077"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="quantity"
        android:textAllCaps="true"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/decrease_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="decrementValue"
            android:text="-"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/quantity_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="0"
            android:textColor="#000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/increase_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="incrementValue"
            android:text="+"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:textAllCaps="true"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/price_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="$0.00"
        android:textColor="#000"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Per Coffee Price = $5"
        android:textColor="#999"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:onClick="submitOrder"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Order"
            android:textSize="25dp" />

        <Button
            android:id="@+id/reset_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:onClick="resetButton"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="Reset"
            android:textSize="25sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/order_submitted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#077"
            android:textSize="30sp" />
    </RelativeLayout>
</LinearLayout>
