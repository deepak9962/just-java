<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    tools:context=".MainActivity"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/coffee_view"
        android:text="Order Coffee"
        android:textSize="40dp"
        android:textColor="#077"
        android:gravity="center_horizontal"
        android:background="#dee"
        android:fontFamily="sans-serif-light"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantity"
        android:text="quantity"
        android:textAllCaps="true"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/increase_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="+"
        android:textSize="30sp"
        android:onClick="incrementValue"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantity_number"
        android:text="1"
        android:textSize="30sp"
        android:textColor="#000"
        />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/decrease_button"
        android:text="-"
        android:textSize="30sp"
        android:onClick="decrementValue"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_text_view"
        android:text="price"
        android:textSize="30sp"
        android:layout_marginTop="16dp"
        android:textAllCaps="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_number"
        android:text="$5.00"
        android:textSize="30sp"
        android:layout_marginTop="16dp"
        android:textColor="#000"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_id"
        android:text="Order"
        android:textSize="25dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:onClick="submitOrder"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Per Coffee Price = $5"
        android:textSize="20sp"
        android:textColor="#999"
        android:layout_marginTop="16dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/order_submitted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="30sp"
            android:textColor="#077"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            />
    </RelativeLayout>
</LinearLayout>
